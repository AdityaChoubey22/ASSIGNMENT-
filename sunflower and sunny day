  <!-- Petals -->
  <script>
    const numPetals = 12;
    for (let i = 0; i < numPetals; i++) {
      const petal = document.createElement('div');
      petal.className = 'petal';
      petal.style.transform = `translateX(-50%) rotate(${i * (360 / numPetals)}deg)`;
      document.body.appendChild(petal);
    }
  </script>
